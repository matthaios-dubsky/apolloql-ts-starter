{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "emitBOM": true,
    "experimentalDecorators": true,
    "extendedDiagnostics": true,
    "incremental": true,
    "noImplicitReturns": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
